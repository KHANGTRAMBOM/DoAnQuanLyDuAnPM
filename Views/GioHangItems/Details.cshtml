}

<h1>@ViewData["Title"]</h1>

<div>

    <hr />
    <dl class="row">
        <div class="col-6">
            <dt class="col-sm-2" style="font-size: 1.2rem;">
                @Html.DisplayNameFor(model => model.Book.TenSach)
            </dt>
            <dd class="col-sm-10" style="font-size: 1.2rem;">
                @Html.DisplayFor(model => model.Book.TenSach)
            </dd>
            <dt class="col-sm-2" style="font-size: 1.2rem;">
                @Html.DisplayNameFor(model => model.SoLuong)
            </dt>
            <dd class="col-sm-10" style="font-size: 1.2rem;">
                @Html.DisplayFor(model => model.SoLuong)
            </dd>
            <dt class="col-sm-2" style="font-size: 1.2rem;">
                @Html.DisplayNameFor(model => model.Gia)
            </dt>
            <dd class="col-sm-10" style="font-size: 1.2rem;">
                @Html.DisplayFor(model => model.Gia)
            </dd>
            <dt class="col-sm-2" style="font-size: 1.2rem;">
                @Html.DisplayNameFor(model => model.Book.MoTa)
            </dt>
            <dd class="col-sm-10" style="font-size: 1.2rem;">
                @Html.DisplayFor(model => model.Book.MoTa)
            </dd>
