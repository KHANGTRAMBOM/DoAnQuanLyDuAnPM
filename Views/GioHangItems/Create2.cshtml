@model BookWebsite.Models.GioHangItem
@using Microsoft.AspNetCore.Identity
@{
    ViewData["Title"] = "Thêm sách";
}

<h1>Create</h1>

<h4>GioHangItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
       
                 <label asp-for="GioHangId" class="control-label" type="hidden"></label>
            </div>
            <div class="form-group mb-3">
                <label asp-for="BookId" class="control-label"></label>       
                   <input type="hidden" asp-for="BookId" value="@ViewBag.SelectedBook.Id" />
                    <input type="text" class="form-control" value="@ViewBag.SelectedBook.TenSach" readonly />
            </div>
            <div class="form-group mb-3">
                <label asp-for="SoLuong" class="control-label"></label>
                <input asp-for="SoLuong" class="form-control" />
                <span asp-validation-for="SoLuong" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Gia" class="control-label"></label>
                <input asp-for="Gia" class="form-control" />
                <span asp-validation-for="Gia" class="text-danger"></span>
            </div>
            <div class="form-group ">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Index">Back to List</a>
    }
    else
    {
        <a asp-controller="Books" asp-action="Index2">Back</a>
    }


</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
