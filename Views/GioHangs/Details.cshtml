@model BookWebsite.Models.GioHang
@using Microsoft.AspNetCore.Identity;
@{
    ViewData["Title"] = "Details";
}
<div>
    <h4>Giỏ hàng của bạn</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TongTien)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TongTien)
        </dd>
        <dt class = "col-sm-2">
            Tên người dùng
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NguoiDung.UserName)
        </dd>

        <h4 class="mb-4">Các sách trong giỏ hàng:</h4>
        <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th>Tên sách</th>
                    <th>Số lượng</th>
                    <th>Giá</th>
                </tr>
            </thead>
            <tbody>
                @for(int i =0; i < ViewBag.gioHang.Count;i++)
                {
                    <tr>
                        <td scope="row">@(i + 1)</td>
                        <td>@ViewBag.gioHang[i].Book.TenSach</td>
                        <td>@ViewBag.gioHang[i].SoLuong</td>
                        <td>@ViewBag.gioHang[i].Book.Gia</td>
                    </tr>
                }
             
            </tbody>
        </table>
    </dl>
</div>
<div>
    @if(User.IsInRole("Admin"))
    {
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
        <a class="btn btn-success"  asp - action="Index"> Back to List</a>
    }
   
</div>
