<script>
    function displayFileUrl(event) {
        var fileInput = event.target;
        var file = fileInput.files[0];
        var urlElement = document.getElementById('currentImageUrl');

        // Kiểm tra xem có file được chọn không
        if (file) {
            // Tạo URL cho file đã chọn
            var fileUrl = URL.createObjectURL(file);
            urlElement.href = fileUrl;  
            urlElement.textContent = file.name; 
            urlElement.style.display = 'inline'; 
        }
    }
</script>